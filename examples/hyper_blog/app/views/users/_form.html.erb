<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <%= pluralize(@user.errors.count, "error") %> 
      prohibited this user from being saved: <br/>
      <% @user.errors.full_messages.each do |msg| %>
        ~> <%= msg %><br/>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>  
  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
